# ====================
# DATABASE
# ====================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=stellar_hackathon

# ====================
# BETTER AUTH
# ====================
BETTER_AUTH_SECRET=your_32_character_secret_here
BETTER_AUTH_URL=https://api.stellield.baris.world

# ====================
# CORS CONFIGURATION
# ====================
CORS_ORIGIN=https://stellield.baris.world

# ====================
# WEB APP (Next.js)
# ====================
NEXT_PUBLIC_SERVER_URL=https://api.stellield.baris.world
NEXT_PUBLIC_AGENT_API_URL=https://agent.stellield.baris.world
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here

# ====================
# AGENT SERVICE (Python)
# ====================
# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Data Source URLs
DEFILLAMA_YIELD_URL=https://yields.llama.fi/pools
HORIZON_API_URL=https://horizon.stellar.org
VALIDATION_CLOUD_API_KEY=

# Caching Configuration
CACHE_TTL_SECONDS=600
ENABLE_REDIS_CACHE=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log

# API Server
API_WORKERS=4
AGENT_CORS_ORIGINS=https://stellield.baris.world,https://api.stellield.baris.world

# Recommendation Settings
DEFAULT_RISK_TOLERANCE=medium
MIN_LIQUIDITY_USD=50000
MAX_RECOMMENDATIONS=5

# ====================
# SERVER (Internal URL for docker network)
# ====================
AGENT_API_URL=http://agent:8000

# ====================
# CCTP BRIDGE CONFIGURATION
# ====================
STELLAR_PRIVATE_KEY=your_stellar_private_key
SOLANA_PRIVATE_KEY=your_solana_private_key
NETWORK=testnet

# Stellar Network (for ValidationCloud)
STELLAR_RPC_URL=https://soroban-testnet.stellar.org:443
STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# Solana Network
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PAYER_SECRET_KEY=
SOLANA_TREASURY_ADDRESS=

# ====================
# DEPLOYMENT NOTES
# ====================
# 1. Replace all "stellield.baris.world" with your actual domain
# 2. Generate a strong BETTER_AUTH_SECRET (32+ characters)
# 3. Set a secure POSTGRES_PASSWORD
# 4. Add your GEMINI_API_KEY for the AI agent
# 5. Configure blockchain private keys for CCTP bridge
# 6. Update CORS_ORIGIN to match your production domain
# 7. Add your NEXT_PUBLIC_PRIVY_APP_ID from https://dashboard.privy.io/
#
# Dokploy Configuration:
# - Web:    stellield.baris.world         (port 3001)
# - Server: api.stellield.baris.world     (port 3000)
# - Docs:   docs.stellield.baris.world    (port 3002)
# - Agent:  agent.stellield.baris.world   (port 8000)
